<div class="max-w-md mx-auto mt-8">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h1 class="card-title text-3xl mb-6 justify-center"><%= t("sessions.new.title") %></h1>

      <%= form_with(url: sign_in_path, class: "space-y-6") do |form| %>
        <div class="form-control w-full">
          <label class="label">
            <span class="label-text"><%= t("sessions.new.email_address") %></span>
          </label>
          <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text"><%= t("sessions.new.password") %></span>
          </label>
          <%= form.password_field :password, required: true, autocomplete: "current-password", class: "input input-bordered w-full" %>
          <label class="label">
            <%= link_to t("sessions.new.forgot_password"), new_identity_password_reset_path, class: "label-text-alt link link-primary" %>
          </label>
        </div>

        <div class="form-control mt-8">
          <%= form.submit t("sessions.new.submit"), class: "btn btn-primary btn-lg w-full" %>
        </div>
      <% end %>

      <div class="divider"><%= t("common.or") %></div>

      <div class="space-y-3">
        <%= link_to new_sessions_passwordless_path, class: "btn btn-outline w-full" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
          <%= t("sessions.new.sign_in_without_password") %>
        <% end %>

        <%= button_to "/auth/developer", method: :post, "data-turbo" => false, class: "btn btn-outline w-full" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
          </svg>
          <%= t("sessions.new.sign_in_with_omniauth") %>
        <% end %>
      </div>

      <div class="divider"></div>

      <div class="text-center">
        <p class="text-sm text-base-content/70">
          <%= t("sessions.new.dont_have_account") %>
          <%= link_to t("sessions.new.sign_up"), sign_up_path, class: "link link-primary font-semibold" %>
        </p>
      </div>
    </div>
  </div>
</div>
