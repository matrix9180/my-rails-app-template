<div class="max-w-4xl mx-auto">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h1 class="card-title text-3xl mb-6">Devices & Sessions</h1>

      <div id="sessions" class="space-y-4">
        <% @sessions.each do |session| %>
          <div id="<%= dom_id session %>" class="card bg-base-200">
            <div class="card-body">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <p class="text-sm font-semibold text-base-content/70">User Agent</p>
                  <p class="text-sm break-words"><%= session.user_agent %></p>
                </div>

                <div>
                  <p class="text-sm font-semibold text-base-content/70">IP Address</p>
                  <p class="text-sm"><%= session.ip_address %></p>
                </div>

                <div>
                  <p class="text-sm font-semibold text-base-content/70">Created at</p>
                  <p class="text-sm"><%= session.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                </div>
              </div>

              <div class="card-actions justify-end mt-4">
                <%= button_to "Log out", session, method: :delete, class: "btn btn-error btn-sm" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="card-actions justify-end mt-6">
        <%= link_to "Back", root_path, class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
</div>
