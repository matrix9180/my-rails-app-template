<div class="max-w-md mx-auto mt-8">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h1 class="card-title text-3xl mb-2 justify-center"><%= t("two_factor_authentication.challenge.totps.new.title") %></h1>
      <p class="text-center text-base-content/70 mb-6"><%= t("two_factor_authentication.challenge.totps.new.description") %></p>

      <%= form_with(url: two_factor_authentication_challenge_totp_path, class: "space-y-6") do |form| %>
        <div class="form-control w-full">
          <label class="label">
            <span class="label-text"><%= t("two_factor_authentication.challenge.totps.new.verification_code") %></span>
          </label>
          <%= form.text_field :code, autofocus: true, required: true, autocomplete: :off, class: "input input-bordered w-full text-center text-2xl tracking-widest font-mono", maxlength: 6, pattern: "[0-9]{6}", placeholder: "000000" %>
        </div>

        <div class="form-control mt-8">
          <%= form.submit t("two_factor_authentication.challenge.totps.new.verify"), class: "btn btn-primary btn-lg w-full" %>
        </div>
      <% end %>

      <div class="divider"></div>

      <div class="alert alert-warning">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
          <h3 class="font-bold"><%= t("two_factor_authentication.challenge.totps.new.dont_have_phone") %></h3>
          <div class="text-xs">
            <%= link_to t("two_factor_authentication.challenge.totps.new.use_recovery_code"), new_two_factor_authentication_challenge_recovery_codes_path, class: "link link-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
