<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h1 class="card-title text-3xl mb-6"><%= t("admin.users.edit.title") %></h1>

    <%= form_with model: [ :admin, @user ], local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div role="alert" class="alert alert-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h3 class="font-bold"><%= pluralize(@user.errors.count, t("common.errors.prohibited"), t("common.errors.errors")) %></h3>
            <ul class="list-disc list-inside text-sm">
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-control w-full">
        <label class="label">
          <span class="label-text"><%= t("admin.users.edit.email") %></span>
        </label>
        <%= form.email_field :email, class: "input input-bordered w-full", required: true %>
      </div>

      <div class="form-control w-full">
        <label class="label">
          <span class="label-text"><%= t("admin.users.edit.username") %></span>
        </label>
        <%= form.text_field :username, class: "input input-bordered w-full", required: true %>
      </div>

      <div class="form-control w-full">
        <label class="label">
          <span class="label-text"><%= t("admin.users.edit.role") %></span>
        </label>
        <% if @user == Current.user %>
          <%= form.select :role, options_for_select([
            [t("admin.users.edit.role_user"), "user"],
            [t("admin.users.edit.role_admin"), "admin"]
          ], @user.role), {}, { class: "select select-bordered w-full", disabled: true } %>
          <label class="label">
            <span class="label-text-alt text-base-content/70"><%= t("admin.users.edit.role_disabled_hint") %></span>
          </label>
        <% else %>
          <%= form.select :role, options_for_select([
            [t("admin.users.edit.role_user"), "user"],
            [t("admin.users.edit.role_admin"), "admin"]
          ], @user.role), {}, { class: "select select-bordered w-full" } %>
        <% end %>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer">
          <span class="label-text"><%= t("admin.users.edit.verified") %></span>
          <%= form.check_box :verified, class: "checkbox checkbox-primary" %>
        </label>
        <label class="label">
          <span class="label-text-alt text-base-content/70"><%= t("admin.users.edit.verified_hint") %></span>
        </label>
      </div>

      <div class="card-actions justify-end mt-6">
        <%= link_to t("admin.users.edit.cancel"), admin_user_path(@user), class: "btn btn-ghost" %>
        <%= form.submit t("admin.users.edit.save_changes"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

