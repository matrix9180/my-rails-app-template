<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h1 class="card-title text-3xl mb-6"><%= t("settings.appearance.title") %></h1>
    <p class="text-base-content/70 mb-6"><%= t("settings.appearance.description") %></p>

    <div data-controller="theme-picker" data-theme-picker-url-value="<%= settings_appearance_path %>">
      <div class="form-control w-full">
        <label class="label">
          <span class="label-text text-lg font-semibold"><%= t("settings.appearance.theme_label") %></span>
        </label>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 mt-4">
          <% User.themes.keys.each do |theme_key| %>
            <label class="cursor-pointer">
              <input 
                type="radio" 
                name="user[theme]" 
                value="<%= theme_key %>" 
                class="peer sr-only" 
                <%= 'checked' if @user.theme == theme_key %> 
                data-action="change->theme-picker#selectTheme"
                data-theme-picker-target="radio"
              />
              <div class="card border-2 border-transparent peer-checked:border-primary transition-all hover:scale-105" data-theme="<%= theme_key %>">
                <div class="card-body p-4">
                  <div class="flex flex-col items-center gap-2">
                    <div class="flex gap-1">
                      <div class="w-4 h-4 rounded bg-primary"></div>
                      <div class="w-4 h-4 rounded bg-secondary"></div>
                      <div class="w-4 h-4 rounded bg-accent"></div>
                      <div class="w-4 h-4 rounded bg-neutral"></div>
                    </div>
                    <span class="text-sm font-medium capitalize text-base-content"><%= theme_key.to_s.humanize %></span>
                  </div>
                </div>
              </div>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

