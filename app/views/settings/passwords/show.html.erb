<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h1 class="card-title text-3xl mb-6"><%= t("passwords.edit.title") %></h1>

    <%= form_with(url: settings_password_path, method: :patch, class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div role="alert" class="alert alert-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h3 class="font-bold"><%= pluralize(@user.errors.count, t("common.errors.prohibited"), t("common.errors.errors")) %></h3>
            <ul class="list-disc list-inside text-sm">
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-control w-full">
        <label class="label">
          <span class="label-text"><%= t("passwords.edit.new_password") %></span>
        </label>
        <%= form.password_field :password, required: true, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
        <label class="label">
          <span class="label-text-alt text-base-content/70"><%= t("passwords.edit.password_minimum") %></span>
        </label>
      </div>

      <div class="form-control w-full">
        <label class="label">
          <span class="label-text"><%= t("passwords.edit.confirm_new_password") %></span>
        </label>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mt-8">
        <%= form.submit t("passwords.edit.save_changes"), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

