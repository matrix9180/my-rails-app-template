<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <% if Current.user.verified? %>
      <h1 class="card-title text-3xl mb-6"><%= t("emails.edit.change_email") %></h1>
    <% else %>
      <h1 class="card-title text-3xl mb-2"><%= t("emails.edit.verify_email") %></h1>
      <div role="alert" class="alert alert-info mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-sm"><%= t("emails.edit.verification_sent") %></span>
      </div>
      <div class="mb-6">
        <%= button_to t("emails.edit.resend_verification_email"), identity_email_verification_path, class: "btn btn-outline btn-sm" %>
      </div>
    <% end %>

    <%= form_with(url: settings_email_path, method: :patch, class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div role="alert" class="alert alert-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h3 class="font-bold"><%= pluralize(@user.errors.count, t("common.errors.prohibited"), t("common.errors.errors")) %></h3>
            <ul class="list-disc list-inside text-sm">
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-control w-full">
        <label class="label">
          <span class="label-text"><%= t("emails.edit.email_address") %></span>
        </label>
        <%= form.email_field :email, value: @user.email, required: true, autofocus: true, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mt-8">
        <%= form.submit t("emails.edit.save_changes"), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

