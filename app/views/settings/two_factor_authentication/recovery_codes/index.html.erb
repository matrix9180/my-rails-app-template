<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h1 class="card-title text-3xl mb-4"><%= t("two_factor_authentication.profile.recovery_codes.index.title") %></h1>
    <div role="alert" class="alert alert-warning mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <span><%= t("two_factor_authentication.profile.recovery_codes.index.description") %></span>
    </div>

    <div data-controller="toggle clipboard">
      <div class="mb-4">
        <button type="button" data-toggle-target="button" data-action="click->toggle#toggle" data-show-text="<%= t('two_factor_authentication.profile.recovery_codes.index.show_codes') %>" data-hide-text="<%= t('two_factor_authentication.profile.recovery_codes.index.hide_codes') %>" class="btn btn-outline">
          <%= t('two_factor_authentication.profile.recovery_codes.index.show_codes') %>
        </button>
      </div>
      <div data-toggle-target="content" class="card bg-base-200 p-6 mb-6 hidden relative">
        <button type="button" data-action="click->clipboard#copy" title="Copy to clipboard" class="btn btn-sm btn-ghost absolute top-2 right-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
        </button>
        <ul data-clipboard-target="codeList" class="space-y-2 font-mono text-center">
          <% @recovery_codes.each do |recovery_code| %>
            <% if recovery_code.used? %>
              <li class="text-base-content/50 line-through"><%= recovery_code.code %></li>
            <% else %>
              <li class="text-lg font-semibold"><%= recovery_code.code %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="divider"></div>

    <div>
      <h2 class="text-2xl font-semibold mb-2"><%= t("two_factor_authentication.profile.recovery_codes.index.need_new_codes") %></h2>
      <p class="mb-4"><%= t("two_factor_authentication.profile.recovery_codes.index.need_new_codes_description") %></p>

      <%= button_to t("two_factor_authentication.profile.recovery_codes.index.generate_new"), settings_two_factor_authentication_recovery_codes_path, class: "btn btn-outline" %>
    </div>
  </div>
</div>

