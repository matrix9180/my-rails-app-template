<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h1 class="card-title text-3xl mb-6"><%= t("sessions.index.title") %></h1>

    <div id="sessions" class="space-y-4">
      <% @sessions.each do |session| %>
        <div id="<%= dom_id session %>" class="card bg-base-200">
          <div class="card-body">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <p class="text-sm font-semibold text-base-content/70"><%= t("sessions.index.user_agent") %></p>
                <p class="text-sm break-words"><%= session.user_agent %></p>
              </div>

              <div>
                <p class="text-sm font-semibold text-base-content/70"><%= t("sessions.index.ip_address") %></p>
                <p class="text-sm"><%= session.ip_address %></p>
              </div>

              <div>
                <p class="text-sm font-semibold text-base-content/70"><%= t("sessions.index.created_at") %></p>
                <p class="text-sm"><%= session.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
            </div>

            <div class="card-actions justify-end mt-4">
              <%= button_to t("sessions.index.log_out"), settings_session_path(session), method: :delete, class: "btn btn-error btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

