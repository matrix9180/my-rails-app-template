<% flash.each do |type, message| %>
  <div role="alert" class="alert <%= flash_alert_class(type) %> mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= flash_icon_path(type) %>" />
    </svg>
    <span><%= message %></span>
  </div>
<% end %>

