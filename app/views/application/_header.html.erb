<header class="navbar bg-base-100 shadow-lg fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-5 flex justify-between items-center w-full">
    <div class="flex-1">
      <%= link_to root_path, class: "btn btn-ghost text-xl" do %>
        <%= t("application.name") %>
      <% end %>
    </div>
    <div class="flex-none ml-auto">
      <% if Current.user %>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost">
            <% if Current.user.avatar.attached? %>
              <%= image_tag Current.user.avatar, class: "w-6 h-6 rounded-full object-cover mr-2", onclick: "event.stopPropagation();" %>
            <% end %>
            <%= link_to Current.user.username, my_profile_path, class: "hover:underline", onclick: "event.stopPropagation();" %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1" onclick="event.stopPropagation();">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            </svg>
          </div>
          <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
            <li class="py-2">
              <div class="flex justify-center">
                <%= link_to my_profile_path do %>
                  <% if Current.user.avatar.attached? %>
                    <%= image_tag Current.user.avatar, class: "w-16 h-16 rounded-full object-cover hover:opacity-80 transition-opacity" %>
                  <% else %>
                    <div class="w-16 h-16 rounded-full bg-base-300 flex items-center justify-center text-base-content font-semibold hover:opacity-80 transition-opacity">
                      <%= Current.user.username.first.upcase %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </li>
            <li class="pb-2">
              <div class="flex justify-center text-sm font-semibold">
                <%= link_to "@#{Current.user.username}", my_profile_path, class: "hover:underline" %>
              </div>
            </li>
            <li><hr class="my-2"></li>
            <li><%= link_to t("layout.header.home"), root_path %></li>
            <li><%= link_to t("layout.header.settings"), settings_path %></li>
            <% if Current.user&.admin? %>
              <li><%= link_to t("layout.header.admin"), admin_users_path %></li>
            <% end %>
            <li><hr class="my-2"></li>
            <li>
              <%= button_to t("layout.header.log_out"), settings_session_path(Current.session), method: :delete, class: "text-error w-full text-left", data: { turbo: false } %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="flex gap-2">
          <%= link_to t("layout.header.sign_in"), sign_in_path, class: "btn btn-ghost" %>
          <%= link_to t("layout.header.sign_up"), sign_up_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</header>

